<?xml version="1.0" encoding="UTF-8"?>
<templates id="product_table_templates" xml:space="preserve">
    <t t-name="theme_gunwerks.p_table_popup_template">
        <div class="p_table_panel modal fade dialog_box_popup product-slider-info" role="dialog" id="product_table_modal">
            <div class="modal-content modal-dialog">
                <div class="modal-header">
                    <h4>Configure Product Slider</h4>
                    <button type="button" class="close" data-dismiss="modal">
                        <i class="ti-close"/>
                    </button>
                </div>
                <div class="o_product_slider_panel_content modal-body">
                    <div class="o_product_slider_config_details">
                        <form class="form-horizontal container-fluid" role="form">
                            <div class="row align-items-center form-group s_tab_category_container">
                                <label for="s_tab_category" class="col-sm-3 m-0 control-label">Category</label>
                                <div class="col-sm-9">
                                    <select class="form-control" name="s_tab_category" id="s_tab_category"/>
                                </div>
                            </div>
                            <div id="filters_group" class="row"/>
                            <div class="row align-items-center form-group">
                                <label for="is_image" class="col-sm-3 m-0 control-label">Show Image?</label>
                                <div class="col-sm-9">
                                    <input type="checkbox" name="is_image" id="is_image"/>
                                </div>
                            </div>
                            <div class="row align-items-center form-group">
                                <label for="is_description" class="col-sm-3 m-0 control-label">Show Description?</label>
                                <div class="col-sm-9">
                                    <input type="checkbox" name="is_description" id="is_description"/>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary btn_close" data-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary btn_apply" data-dismiss="modal">Apply</button>
                </div>
            </div>
        </div>
    </t>
</templates>
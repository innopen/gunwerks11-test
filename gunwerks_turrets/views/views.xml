        }
      </field>
    </record>
    -->

    <!-- Top menu item -->
    <menuitem name="Turrets" id="gunwerks_turrets.menu_root"/>
  
    <!-- menu categories -->

    <menuitem name="Turret Jobs" id="gunwerks_turrets.job" parent="gunwerks_turrets.menu_root"
              action="gunwerks_turrets.action_turret_job"/>
    <menuitem name="Turret Layouts" id="gunwerks_turrets.layout" parent="gunwerks_turrets.menu_root"
              action="gunwerks_turrets.action_turret_layout"/>

  </data>
</odoo>
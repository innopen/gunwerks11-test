<odoo>
  <data>
    <!-- explicit list view definition -->
    <record model="ir.ui.view" id="gunwerks_ballistics.workspace_list">
      <field name="name">Website Ballistic Workspaces</field>
      <field name="model">ballistic.workspace</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>          
          <field name="res_user_id"/>
        </tree>
      </field>
    </record>

    <!-- explicit list view definition -->
    <record model="ir.ui.view" id="gunwerks_ballistics.workspace_form">
      <field name="name">Ballistics Workspaces</field>
      <field name="model">ballistic.workspace</field>
      <field name="arch" type="xml">
        <form>
            <header>
                <button name='test' string="test" type='object'/>
            </header>
            <sheet>
              <group>
                <group>
                    <field name="name"/>                  
                    <field name="res_user_id"/>
                    <field name="min_range"/>
                    <field name="max_range"/>
                    <field name="range_increment"/>
                </group> 
                <group string='Output Settings'>
                  <field name='spin_drift_active'/>
                  <field name="coriolis_active"/>
                  <field name='air_jump_active'/>
                  <field name="target_lead_active"/>                
                </group> 
              </group> 
              <notebook>
                <page string='1st Workset'>
                  <group>
                    <field name='workset_1_profile_id'/>
                    <field name='workset_1_environment_id'/>
                    <field name='workset_1_data'/>  
                  </group>
                </page>
                <page string='2nd Workset'>
                  <group>
                      <field name='workset_2_profile_id'/>
                      <field name='workset_2_environment_id'/>
                      <field name='workset_2_data'/>  
                  </group>
                </page>
                <page string='3nd Workset'>
                  <group>                    
                    <field name='workset_3_profile_id'/>
                    <field name='workset_3_environment_id'/>
                    <field name='workset_3_data'/>                    
                  </group>
                </page>
              </notebook>
            </sheet>
        </form>
      </field>
    </record>

    <!-- actions opening views on models -->
    <record model="ir.actions.act_window" id="gunwerks_ballistics.action_ballistic_workspace">
      <field name="name">Ballistic Workspaces</field>
      <field name="res_model">ballistic.workspace</field>
      <field name="view_mode">tree,form</field>
    </record>

    <!-- server action to the one above -->
